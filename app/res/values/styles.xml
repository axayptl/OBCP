<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="edittext">
        <item name="android:background">@color/eddittext_bg</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="btn_blue_light">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="btn_yellow_bigtext">
        <item name="android:background">@color/yellow</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textSize">@dimen/size_text_signupbutton</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="text_calendar_title">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_calendar_date">
        <item name="android:textColor">#FFF</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:height">30dp</item>
        <item name="android:width">30dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_settings">
        <item name="android:textColor">#FFF</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="text_white_big">
        <item name="android:textColor">#FFF</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="text_white_small">
        <item name="android:textColor">#FFF</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="text_white_medium">
        <item name="android:textColor">#FFF</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="toggle_private_work">
        <item name="android:button">@drawable/toggle_private_work</item>
    </style>

    <style name="text_blue_medium">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:background">@color/bg_item_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <!-- DIALOG STYLE -->
    <style name="You.Dialog" parent="AppBaseTheme">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>